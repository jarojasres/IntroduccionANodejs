<div id="contenedorPrincipal" class="container" data-menu="#crearCursos">
    <div class="row">
        <div class="col-12">
            <h2>Creación de curso</h2>

              {{#if mensaje}}
                    <div class="alert {{mensaje.clase}}" role="alert">
                            {{mensaje.mensaje}}
                    </div>
             {{/if}}
        <form method="post">
            <div class="form-group">
                <label for="cursoId">Código del curso</label>
                <input type="text" class="form-control" id="cursoId" name="cursoId" aria-describedby="cursoIdHelp" placeholder="Ingrese código" required="required">
                <small id="cursoIdHelp" class="form-text text-muted">Identificador único del curso</small>
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese nombre" required="required">
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea rows="3" class="form-control" id="descripcion" name="descripcion" placeholder="Ingrese descripción" required="required"></textarea>
            </div>
            <div class="form-group">
                <label for="horas">Intensidad horaria (horas)</label>
                <input type="number" class="form-control" id="horas" name="horas" placeholder="Ingrese horas">
            </div>
            <div class="form-group">
                <label for="valor">Valor</label>
                <input type="number" class="form-control" id="valor" name="valor" placeholder="Ingrese valor" required="required">
            </div>
            <div class="form-group">
                <label for="modalidad">Modalidad</label>
                <select id="modalidad" name="modalidad" class="form-control">
                    <option value="">--SELECCIONE--</option>
                    <option value="presencial">Presencial</option>
                    <option value="virtual">Virtual</option>
                </select>
            </div>            
            <button type="submit" class="btn btn-primary">Crear</button>
        </form>
    </div>
</div>
</div>